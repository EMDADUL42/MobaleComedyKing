<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true"><layer-list>

            <!-- Bottom/Left/Right shadow (black) -->
            <item android:top="2dp"><shape android:shape="rectangle">
                    <solid android:color="#BDBDBD" />

                    <corners android:radius="10dp" />
                </shape></item>

            <!-- Top shadow -->
            <item android:bottom="6dp" android:left="2dp" android:right="2dp"><shape android:shape="rectangle">
                    <solid android:color="#ffffff" /> <!-- Top shadow -->
                    <corners android:radius="10dp" />
                </shape></item>

            <!-- Inner background (Pressed = Green) -->
            <item android:bottom="2dp" android:left="1dp" android:right="1dp" android:top="1dp"><shape android:shape="rectangle">
                    <solid android:color="#00FF00" /> <!-- Pressed fill = Green -->
                    <corners android:radius="10dp" />
                </shape></item>
        </layer-list></item>

    <!-- Default/Normal State -->
    <item><layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <item android:top="3dp"><shape android:shape="rectangle">
                    <solid android:color="#E9CC84" />

                    <corners android:radius="8dp" />
                </shape></item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp"><shape android:shape="rectangle">
                    <solid android:color="#E9CC84" />

                    <corners android:radius="8dp" />
                </shape></item>
            <item android:bottom="4dp" android:left="1dp" android:right="1dp" android:top="2dp"><shape android:shape="rectangle">
                    <solid android:color="#2B1036" />

                    <corners android:radius="8dp" />
                </shape></item>
        </layer-list></item>

</selector>